def tambah(bil1,bil2):
    hasil = bil1+bil2
    print("hasil tambah dari" ,bil1,"+",bil2,"=",hasil)
    
def kurang(bil1,bil2):
    hasil = bil1-bil2
    print("hasil pengurangan dari" ,bil2,"-",bil2,"=",hasil)
    
def kali(bil1,bil2):
    hasil = bil1*bil2
    print("hasil perkalian dari" ,bil1,"*",bil2,"=",hasil)
    
def bagi(bil,bil2):
    hasil = bil1/bil2
    print("hasil pembagian dari" ,bil1,"/",bil2,"=",hasil)
    
def pangkat(bil,bil2):
    hasil = math.pow(9)
    print("hasil pembagian dari" ,bil1,"/",bil2,"=",hasil)
    
def akar(bil,bil2):
    hasil = math.pow(9)
    print("hasil pembagian dari" ,bil1,"/",bil2,"=",hasil)

